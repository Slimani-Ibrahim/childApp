<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bord">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/score10"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />

                    <ImageView
                        android:id="@+id/score9"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score8"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score7"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />

                    <ImageView
                        android:id="@+id/score1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/score20"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />

                    <ImageView
                        android:id="@+id/score19"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score18"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score17"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score16"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score15"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score14"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score13"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/score12"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />

                    <ImageView
                        android:id="@+id/score11"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        />

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/question_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/White"
                        android:textSize="20dp"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/r_pr2"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:textSize="20dp"/>

                        <Button
                            android:id="@+id/r_pr1"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/r_pr4"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:textSize="20dp"/>

                        <Button
                            android:id="@+id/r_pr3"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:textSize="20dp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/White" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="20dp">



                    <LinearLayout
                        android:id="@+id/close_item"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_marginHorizontal="9dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@drawable/close"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="خروج"
                            android:textSize="18dp"
                            android:textColor="@color/White"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/return_item"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_marginHorizontal="9dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:padding="10dp"
                            android:src="@drawable/goback"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="رجوع"
                            android:textSize="18dp"
                            android:textColor="@color/White"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/repeat_item"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:layout_marginHorizontal="9dp"
                        android:clickable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:padding="10dp"
                            android:src="@drawable/refresh2"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="إعادة"
                            android:textSize="18dp"
                            android:textColor="@color/White"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>




        </RelativeLayout>

    </ScrollView>
</LinearLayout>